{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "types": [
      "node",
      "reflect-metadata",
      "jest"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ]
}